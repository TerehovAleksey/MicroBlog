@using MicroBlog.UI.Services
@inject IYoutubeService YoutubeService

@if (!string.IsNullOrEmpty(_src))
{
    <SidebarCard Title="Recommendation">
        <SidebarIframe Src="@_src"/>
    </SidebarCard>
}

@code {
    private string? _src;

    protected override async Task OnInitializedAsync()
    {
        _src = await YoutubeService.GetLastRecommendation();
    }

}