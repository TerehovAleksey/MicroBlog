@inject IYoutubeService YoutubeService

@if (_srcs is not null)
{
    <SidebarCard Title="@Strings.Recommendation">
        @foreach (var src in _srcs)
        {
            <SidebarIframe Src="@src" />
        }
    </SidebarCard>
}

@code {

    private IEnumerable<string>? _srcs;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            _srcs = await YoutubeService.GetLastRecommendationsAsync();
        }
        catch (Exception _)
        {
            //ignore
        }
    }

}